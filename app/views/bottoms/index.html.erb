<div>
  <div>
  
    <h1>
      Your bottoms
    </h1>
  </div>
</div>
<% if session.fetch(:user_id) == nil%>
       
      <%else%>

<hr>

<div>
  <div>
    <h2>
      Add a new bottom
    </h2>

    <form action="/insert_bottom" method="post">
      <div>
        <label for="temperature_minimum_box">
          Temperature minimum
        </label>

        <input type="text" id="temperature_minimum_box" name="query_temperature_minimum">
      </div>

      <div>
        <label for="temperature_maximum_box">
          Temperature maximum
        </label>

        <input type="text" id="temperature_maximum_box" name="query_temperature_maximum">
      </div>

      <div>
        <label for="image_box">
          Image
        </label>

        <input type="text" id="image_box" name="query_image">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="hidden" id="user_id_box" name="query_user_id" value=<%= session[:user_id]%>>
      </div>

      <button>
        Create bottom
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Temperature minimum
        </th>

        <th>
          Temperature maximum
        </th>

        <th>
          Image
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_bottoms.each do |a_bottom| %>
      <tr>
        <td>
          <%= a_bottom.id %>
        </td>

        <td>
          <%= a_bottom.temperature_minimum %>
        </td>

        <td>
          <%= a_bottom.temperature_maximum %>
        </td>

        <td>
          <img src="<%= a_bottom.image %>">
        </td>

        <td>
          <%= a_bottom.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_bottom.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_bottom.updated_at) %> ago
        </td>

        <td>
          <a href="/bottoms/<%= a_bottom.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
<%end%>

<hr>
